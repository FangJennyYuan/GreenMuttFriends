
@{
    ViewBag.Title = "Performance Dashboard";
}
@Scripts.Render("~/Scripts/jquery-3.4.1.js")
@Scripts.Render("~/Scripts/moment.js")
@Scripts.Render("~/Scripts/daterangepicker.js")

<h1>
    Performance Dashboard
</h1>

<div class="row date_filter">
    <div class="col-lg-2">
        <button type="button" id="week" onclick="myWeekFunction()"> Week</button>
    </div>
    <div class="col-lg-2">
        <button type="button" id="month" onclick="myWeekFunction()"> Month</button>
    </div>
    <div class="col-lg-2">
        <button type="button" id="all_date" onclick="myWeekFunction()"> All</button>
    </div>
    <div class="col-lg-4">
        Date
        <input type="text" name="daterange" value="01/01/2018 - 01/15/2018" />
    </div>
</div>
<div class="row clinic_filter mt-2">
    <div class="col-lg-3">
        <img class="img-valign" src="http://www.placehold.it/70x70" alt="" />
        <span class="text2">Ijowa Clinic</span>
    </div>
    <div class="col-lg-3">
        <img class="img-valign" src="http://www.placehold.it/70x70" alt="" />
        <span class="text2">Katsina Clinic</span>
    </div>
    <div class="col-lg-3">
        <img class="img-valign" src="http://www.placehold.it/70x70" alt="" />
        <span class="text2">Mashegu Clinic</span>
    </div>
    <div class="col-lg-3">
        <img class="img-valign" src="http://www.placehold.it/70x70" alt="" />
        <span class="text2">Rawayau Clinic</span>
    </div>

</div>

<script>
    $(function () {
        $('input[name="daterange"]').daterangepicker({
            opens: 'left'
        }, function (start, end, label) {
            console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));
        });
    });
</script>
